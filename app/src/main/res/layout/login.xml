<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" android:rowCount="4" android:columnCount="2">
   <TextView android:layout_width="119dp" android:layout_height="wrap_content" android:text="UserId" android:textSize="30sp" android:id="@+id/uid"
       android:layout_column="0"
       android:layout_row="0"
       android:textAppearance="@style/TextAppearance.AppCompat" />
    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp" android:id="@+id/userid"
        android:layout_column="1"
        android:layout_row="0"
        android:hint="Enter UserName"/>
    <TextView android:layout_width="149dp" android:layout_height="wrap_content" android:text="Password" android:textSize="30sp"
        android:layout_column="0"
        android:layout_row="1"
        android:textAppearance="@style/TextAppearance.AppCompat" />
    <EditText android:layout_column="1" android:layout_row="1" android:inputType="textPassword" android:hint="Enter Password"
        android:textSize="20sp" android:id="@+id/pwd"/>

    <Button android:layout_row="2" android:layout_column="1" android:id="@+id/clear" android:text="Clear" android:textSize="25sp"
        android:layout_height="63dp" android:onClick="clearFields" />

    <Button android:layout_row="2" android:layout_column="0"  android:id="@+id/login" android:layout_height="62dp"
        android:layout_width="122dp"
        android:text="Login"
        android:textSize="25sp" android:onClick="loginHandler"/>

 <TextView  android:layout_columnSpan="2" android:layout_row="3" android:gravity="center_horizontal" android:id="@+id/error" android:textColor="#FF0000"
     android:layout_column="0"
     android:layout_width="243dp" />
</GridLayout>